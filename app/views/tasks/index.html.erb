<div class="container mt-3">
  <h1>My Tasks</h1>
  <ul>
    <% @tasks.each do |task| %>
      <li><%= link_to task.title, task_path(task) %></li>
    <% end %>
  </ul>
  <%= link_to new_task_path, class: 'text-primary text-decoration-none' do %>
    <i class="fa-solid fa-plus"></i>
  <% end %>
</div>
